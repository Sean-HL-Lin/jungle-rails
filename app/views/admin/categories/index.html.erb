<section class="admin-products-index">

  <header class="page-header">
    <h1>Admin &raquo; All Categories</h1>
  </header>

  <div class="well">
    <%= link_to '+ New Category', new_admin_category_path , class: 'btn btn-info' %>
  </div>

  <div class="panel panel-default products">

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Category</th>
        <th>Create date</th>
        <th>update date</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <%= render 'item', category: category%>
      <% end %>
    </tbody>
  </table>

</div>

</section>